<%= form_for @assoziation, :html => { :class => "form-horizontal assoziation" } do |f| %>

  <% if @assoziation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@assoziation.errors.count, "error") %> prohibited this assoziation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @assoziation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:code) %>
  </div>
  <div class="form-group">
    <%= f.label :instructor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :instructor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:instructor) %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :category_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:category_id) %>
  </div>
  <div class="form-group">
    <%= f.label :courseofstudy_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :courseofstudy_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:courseofstudy_id) %>
  </div>
  <div class="form-group">
    <%= f.label :lecture_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lecture_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lecture_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                assoziations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
