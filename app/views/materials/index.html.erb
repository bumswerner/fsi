<%- model_class = Material -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:discription) %></th>
      <th><%= model_class.human_attribute_name(:data_file_name) %></th>
      <th><%= model_class.human_attribute_name(:data_content_type) %></th>
      <th><%= model_class.human_attribute_name(:data_file_size) %></th>
      <th><%= model_class.human_attribute_name(:data_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:section_id) %></th>
      <th><%= model_class.human_attribute_name(:lecture_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= link_to material.id, material_path(material) %></td>
        <td><%= material.name %></td>
        <td><%= material.discription %></td>
        <td><%= material.data_file_name %></td>
        <td><%= material.data_content_type %></td>
        <td><%= material.data_file_size %></td>
        <td><%= material.data_updated_at %></td>
        <td><%= material.section_id %></td>
        <td><%= material.lecture_id %></td>
        <td><%=l material.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      material_path(material), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_material_path(material), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      material_path(material),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_material_path,
            :class => 'btn btn-primary' %>
