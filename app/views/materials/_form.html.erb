<%= form_for @material, :html => { :class => "form-horizontal material" } do |f| %>

  <% if @material.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@material.errors.count, "error") %> prohibited this material from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @material.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :discription, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :discription, :class => 'form-control' %>
    </div>
    <%=f.error_span(:discription) %>
  </div>
  <div class="form-group">
    <%= f.label :data_file_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data_file_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data_file_name) %>
  </div>
  <div class="form-group">
    <%= f.label :data_content_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data_content_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data_content_type) %>
  </div>
  <div class="form-group">
    <%= f.label :data_file_size, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data_file_size, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data_file_size) %>
  </div>
  <div class="form-group">
    <%= f.label :data_updated_at, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data_updated_at, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data_updated_at) %>
  </div>
  <div class="form-group">
    <%= f.label :section_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :section_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:section_id) %>
  </div>
  <div class="form-group">
    <%= f.label :lecture_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lecture_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lecture_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                materials_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
