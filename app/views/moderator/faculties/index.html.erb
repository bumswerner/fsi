<%- model_class = Faculty -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:symbol) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.name %></td>
        <td><%= faculty.symbol %></td>
        <td><%= truncate(faculty.description, length: @moderator_description_length) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      moderator_faculty_path(faculty), :class => 'btn btn-default btn-xs' %>
       
          <% # if logged_in?(:admin, :moderator) %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_moderator_faculty_path(faculty), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                       moderator_faculty_path(faculty),
                        :method => :delete,
                        :data => { :confirm => t('.confirm',
                        :default => t("helpers.links.confirm",
                        :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% # end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% #if logged_in?(:admin, :moderator) %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_moderator_faculty_path,
              :class => 'btn btn-primary' %>
<% #end %>
