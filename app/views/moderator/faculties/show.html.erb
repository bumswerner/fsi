<%- model_class = Faculty -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @faculty.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:symbol) %>:</strong></dt>
  <dd><%= @faculty.symbol %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @faculty.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              moderator_faculties_path, :class => 'btn btn-default'  %>
<% if logged_in?(:admin, :moderator) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_moderator_faculty_path(@faculty), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                moderator_faculty_path(@faculty),
                :method => 'delete',
                :data => { :confirm => t('.confirm',
                :default => t("helpers.links.confirm", 
                :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>