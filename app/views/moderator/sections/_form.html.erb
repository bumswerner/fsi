<% target_url = @section.id.present? ? moderator_section_url : moderator_sections_url %>

<%= form_for @section, url: target_url, :html => { :class => "form-horizontal section" } do |f| %>

  <% if @section.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @section.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, rows: 10, :class => 'form-control', placeholder: 'Description of section' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                moderator_sections_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
