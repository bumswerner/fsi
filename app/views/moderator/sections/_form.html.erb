<% target_url = @section.id.present? ? moderator_section_url : moderator_sections_url %>

<%= form_for @section, url: target_url, :html => { :class => "form-horizontal section" } do |f| %>

  <%= render 'shared/form_errors', obj: @section %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, rows: 10, :class => 'form-control', placeholder: 'Description of section' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                moderator_sections_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
