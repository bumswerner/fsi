<%
  @notificationtype.id.present? ?
      path_url = moderator_notificationtype_path(@notificationtype)
    : path_url = moderator_notificationtypes_path(@notificationtype)
%>

<%= form_for @notificationtype, url: path_url,
             :html => { :class => "form-horizontal notificationtype" } do |f| %>

  <% if @notificationtype.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@notificationtype.errors.count, "error") %>
          prohibited this notificationtype from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @notificationtype.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, rows: 6, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
               moderator_notificationtypes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

