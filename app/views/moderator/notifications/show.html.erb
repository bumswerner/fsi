<%- model_class = Notification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %> -
      <%= @notificationtype.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @notification.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @notification.message %></dd>
  <dt><strong>Picture</strong></dt>
  <dd class="img-thumbnail"><%= image_tag create_path(@notification.image.url(:show)) if @notification.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notificationtype_id) %>:</strong></dt>
  <dd><%= Notificationtype.find(@notification.notificationtype_id).name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              moderator_notificationtype_notifications_path(params[:notificationtype_id],
              @notification),
              :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_moderator_notificationtype_notification_path(params[:notificationtype_id],
              @notification), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              moderator_notificationtype_notification_path(params[:notificationtype_id],
              @notification),
              :method => 'delete',
              :data => { :confirm => t('.confirm',
              :default => t("helpers.links.confirm",
              :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
