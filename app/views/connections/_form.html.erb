<%= form_for @connection, :html => { :class => "form-horizontal connection" } do |f| %>

  <% if @connection.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@connection.errors.count, "error") %> prohibited this connection from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @connection.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :lecture_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lecture_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lecture_id) %>
  </div>
  <div class="form-group">
    <%= f.label :section_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :section_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:section_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                connections_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
