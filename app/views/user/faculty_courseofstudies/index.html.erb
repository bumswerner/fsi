
<div class="row">
  
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="<%= user_faculties_path %>">Fakult√§ten</a>
    </li>
    <li class="breadcrumb-item active">
      <%= @faculty.symbol %></a>
     </li>
  </ol>
  
  <center><%= paginate @faculty_courseofstudies %></center>
  
  <% @faculty_courseofstudies.each do |faculty_courseofstudy| %>
    <% 
      studytype = Studytype.find(faculty_courseofstudy.studytype_id)
      categories = faculty_courseofstudy.categories.uniq
    %>
    
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="user-show-title">
          <h2><%= faculty_courseofstudy.name %></h2>
        </div>
        <div class="user-show-body">
          <h3><%= faculty_courseofstudy.symbol + 
                  studytype.symbol %>
             (<%= studytype.name %>)
          </h3>
        </div>
        <div class="user-show-links">
           <% categories.each do |category| %>
            <span class="badge badge-info">
              <%= link_to category.name,
                  user_category_lectures_path(params[:faculty_id], 
                                              category,
                                              faculty_courseofstudy) %>
                  &nbsp;
            </span>
          <% end %>
        </div>  
        <div class="user-show-actions">
          <%= link_to 'Show all Categories', 
              user_courseofstudy_categories_path(params[:faculty_id], faculty_courseofstudy),
             class: "btn btn-primary" %>
          <%= link_to 'Details',
              user_faculty_courseofstudy_path(params[:faculty_id], faculty_courseofstudy),
              class: "btn btn-info" %>
        </div>
      </div>
    </div> 
  <% end %>
  
  <center><%= paginate @faculty_courseofstudies %></center>
  
</div>
 <center><%= link_to 'Back', user_faculties_path, 
              class: "btn btn-default" %></center>
