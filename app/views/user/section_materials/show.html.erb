<!-- index =>  Faculties / IngWi / PIB / Kategorien / S 1 - Mathe 1 / Klausuren / SS2010 -->

<div class="row">
  
   <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="<%= user_faculties_path %>">Fakultäten</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= user_faculties_path %>"><%= @faculty.symbol %></a>
    </li>
    <li class="breadcrumb-item">
     <a href="<%= user_faculty_courseofstudies_path(@faculty_id) %>">
          Studiengänge</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= user_category_lectures_path(@faculty_id,
                                               @category.id,
                                               @courseofstudy.id) %>">
        <%= @courseofstudy.name + " - " + @category.name %></a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= user_section_materials_path(@category.id,
                                               @courseofstudy.id,
                                               params[:lecture_id],
                                               params[:section_id]) %>">
        Klausuren</a>
    </li>
    <li class="breadcrumb-item active">
      <%= @material.name %>
    </li>
  </ol>
  
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="user-show-title">
        <h2><%= @material.name %>  </h2>
          Name: <%= @material.data_file_name %><br />
          Type: <%= @material.data_content_type %><br />
          Size: <%= @material.data_file_size %>
      </div>
      <div class="user-show-body">
        <%= @material.discription %>
      </div>
    </div>
  </div> 
</div>

<center>
  <%= link_to 'Back to Section', 
      user_section_materials_url(params[:category_id],
                                 params[:lecture_id],
                                 params[:section_id]), 
      class: "btn btn-default" %>
      
  <%= link_to 'Back to Lecture' ,   
      user_lecture_sections_url(params[:category_id],
                                params[:courseofstudy_id],
                                params[:lecture_id]),
      class: "btn btn-default" %>
      
  <%= link_to 'Download',
      @material.data.url(:original, false),
      download: '',
      :class => 'btn btn-primary' %>
</center>

