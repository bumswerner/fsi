<!-- index =>  Faculties / IngWi / PIB / Kategorien / S 1 - Mathe 1 / Klausuren  -->

<div class="row">
  
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="<%= user_faculties_path %>">Fakultäten</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= user_faculties_path %>"><%= @faculty.symbol %></a>
    </li>
    <li class="breadcrumb-item">
     <a href="<%= user_faculty_courseofstudies_path(@faculty_id) %>">
          Studiengänge</a>
    </li>
    <li class="breadcrumb-item active">
      <a href="<%= user_category_lectures_path(@faculty_id,
                                               @category.id,
                                               @courseofstudy.id) %>">
        <%= @courseofstudy.name + " - " + @category.name %></a>
    </li>
    <li class="breadcrumb-item active">
      <%= @section.name %>
    </li>
  </ol>
  
  <center><%= paginate @materials %></center>
  
  <% @materials.each do |material| %>
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="user-show-title">
          <h2><%= material.name %></h2>
        </div>
        <div class="user-show-body">
          <%= material.discription %></br>
          <%= material.data_content_type %>
          
        </div>
        <div class="user-show-actions">
        <%= link_to 'Details',
            user_section_material_path(params[:category_id],
                                       params[:courseofstudy_id],
                                        params[:lecture_id],
                                       params[:section_id],
                                       material),
            class: "btn btn-info" %>
        <%= link_to 'Download',
                material.data.url(:original, false),
                download: '',
                :class => 'btn btn-primary' %>
        </div>
      </div>
    </div> 
  <% end %>
  
  <center><%= paginate @materials %></center>
  
</div>
<center>
  <%= link_to 'Back', 
       user_category_lectures_path(@faculty_id,
                                   params[:category_id],
                                   params[:courseofstudy_id]),
       class: "btn btn-default" %>
</center>