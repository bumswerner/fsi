<!-- index =>  Faculties / IngWi / PIB / Kategorien / S 1 - Mathe 1 / Klausuren  -->

<div class="row">
  
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="<%= user_faculties_path %>">Fakultäten</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= user_faculties_path %>"><%= @faculty.symbol %></a>
    </li>
    <li class="breadcrumb-item">
     <a href="<%= user_faculty_courseofstudies_path(@faculty_id) %>">
          Studiengänge</a>
    </li>
    <li class="breadcrumb-item active">
      <a href="<%= user_category_lectures_path(@faculty_id,
                                               @category.id,
                                               @courseofstudy.id) %>">
        <%= @courseofstudy.name + " - " + @category.name %></a>
    </li>
    <li class="breadcrumb-item active">
      <%= @lecture.name + " - " + @section.name %>
    </li>
  </ol>
  <br />
  
  <center><%= paginate @materials %></center>
  
  <% @materials.each do |material| %>
    <div class="col-lg-10 col-lg-offset-1 col-md-8 col-md-offset-2 col-sm-8">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h4 class='panel-title'>
            <span class="badge"><%= @lecture.name %></span>
            <span class="glyphicon glyphicon-arrow-right"></span>
            <span class="badge"><%= @section.name %></span>
            <span class="glyphicon glyphicon-arrow-right"></span>
            <%= material.name %>
          </h4>
        </div>
        <div class="panel-body user-panel-body">
          <p><%= truncate(material.discription,
                 length: @user_description_length) %></p>
        </div>
        <div class='panel-footer user-panel-actions'>
          <a class="btn btn-default"
            href="<%= user_section_material_path(params[:category_id],
                                                 params[:courseofstudy_id],
                                                 params[:lecture_id],
                                                 params[:section_id],
                                                 material) %>">
            <span class="glyphicon glyphicon-eye-open"></span>
            Details
          </a>
          <a class="btn btn-default"
            href="<%=  material.data.url(:original, false) %>"
            download="">
            <span class="glyphicon glyphicon-download-alt"></span>
            Download
          </a>
        </div>
     </div>
    </div> 
  <% end %>
  
  <center><%= paginate @materials %></center>
  
</div>

<br />
<center>
  <a class='btn btn-default' 
     href="<%= user_category_lectures_path(@faculty_id,
                                           params[:category_id],
                                           params[:courseofstudy_id]) %>">
    <span class="glyphicon glyphicon-share"></span> 
     Vorlesungen
  </a>
</center>
