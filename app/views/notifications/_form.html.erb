<%= form_for notificationtype_notifications_url(params[:notificationtype_id]), :html => { multipart: true, :class => "form-horizontal notification" } do |f| %>

  <% if @notification.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@notification.errors.count, "error") %>
         prohibited this notification from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @notification.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :message, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_file_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notificationtype_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= select_tag "notification[notificationtype_id]", 
          options_from_collection_for_select(Notificationtype.all, "id", "name",
          :selected => @notification.notificationtype_id),
          :prompt => "Please select",
          :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                 notificationtype_notifications_path(params[:notificationtype_id]), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
