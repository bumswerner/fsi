<%- model_class = Notification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @notification.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @notification.message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_file_name) %>:</strong></dt>
  <dd><%= @notification.image_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_content_type) %>:</strong></dt>
  <dd><%= @notification.image_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_file_size) %>:</strong></dt>
  <dd><%= @notification.image_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_updated_at) %>:</strong></dt>
  <dd><%= @notification.image_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notificationtype_id) %>:</strong></dt>
  <dd><%= @notification.notificationtype_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              notificationtype_notifications_path(params[:notificationtype_id],
              @notification),
              :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_notificationtype_notification_path(params[:notificationtype_id],
              @notification), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              notificationtype_notification_path(params[:notificationtype_id],
              @notification),
              :method => 'delete',
              :data => { :confirm => t('.confirm',
              :default => t("helpers.links.confirm",
              :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
