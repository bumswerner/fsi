<%= form_for(@user, url: admin_user_url, :html => { :class => "form-horizontal user" }) do |f| %>

  <%= render 'shared/form_errors', obj: @user %>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :roles, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag "user[roles]", 
          options_for_select(["user", "moderator", "admin"],
          :selected => @user.roles),
          :class => 'form-control' %>
    </div>
    
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_users_path, :class => 'btn btn-default' %>
    </div>
  </div>
  
<% end %>